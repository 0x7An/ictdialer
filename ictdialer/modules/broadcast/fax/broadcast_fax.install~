// $Id: broadcast_fax.install,v 1.3.2.2 2011/09/08 13:34:59 diggersf Exp $

/**
 * Implementation of hook_install().
 */
function broadcast_fax_install() {
  drupal_install_schema('broadcast_fax');
}

/**
 * Implementation of hook_schema().
 */
function broadcast_fax_schema() {
  $schema['broadcast_fax'] = array(
    'fields' => array(
      'fax_id'    => array('type' => 'serial',  'not null' => TRUE),
      'name'            => array('type' => 'text',    'not null' => TRUE),
      'description'     => array('type' => 'text',    'not null' => TRUE),
      'type'            => array('type' => 'text',    'not null' => TRUE),
      'path'            => array('type' => 'text',    'not null' => TRUE),
      'size'            => array('type' => 'int',    'not null' => TRUE),
      'created'    => array('type' => 'int',     'not null' => FALSE, 'unsigned' => TRUE),
      'created_by' => array('type' => 'int',     'not null' => TRUE,  'unsigned' => TRUE),
    ),
    'primary key' => array('fax_id'),
  );
  
  $schema['broadcast_campaign_fax'] = array(
    'fields' => array(
      'campaign_fax_id' => array('type' => 'serial',  'not null' => TRUE),
      'fax_id'          => array('type' => 'int',     'not null' => TRUE),
      'campaign_id'           => array('type' => 'int',     'not null' => TRUE, 'unsigned' => TRUE),
    ),
    'primary key' => array('campaign_fax_id'),
  );
  
  return $schema;
}

/**
 * Implementation of hook_uninstall().
 */
function broadcast_fax_uninstall() {
  drupal_uninstall_schema('broadcast_fax');
}
